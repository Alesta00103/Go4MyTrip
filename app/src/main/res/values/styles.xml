<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.MyApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnSecondary">#fff</item>
        <item name="colorSecondary">@color/colorPrimary</item>

    </style>

    <style name="TimePickerTheme" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorPrimary</item>

    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="materialAlertDialogBodyTextStyle">
            @style/BodyTextAppearance.MaterialComponents.Body2
        </item>
        <item name="materialAlertDialogTitleTextStyle">
            @style/MyTitle_MaterialAlertDialog.MaterialComponents.Title.Text
        </item>
        <!--        Radio button unchecked-->
        <item name="android:colorControlNormal">@color/white</item>
        <!--        Radio button checked-->
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorActivatedHighlight">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="editTextColor">@color/white</item>
        <item name="textAppearanceBody2">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnPrimarySurface">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSwitchThumbNormal">@color/quantum_purpleA200</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:weekSeparatorLineColor">@color/white</item>


    </style>

    <style name="MaterialAlertDialogTextTheme" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="MyTitle_MaterialAlertDialog.MaterialComponents.Title.Text" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="BodyTextAppearance.MaterialComponents.Body2" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>

    </style>


    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextAppearanceBody1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearanceBody2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.MyApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MyDatePickerStyle" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen">

        <!-- Put the two options, colorAccent and android:colorAccent. -->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
            <item name="colorAccent">@color/colorPrimary</item>
            <item name="android:colorPrimary">@color/colorPrimary</item>
            <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="android:colorAccent">@color/colorPrimary</item>
        </style>
</resources>

