<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <CheckBox
            android:id="@+id/checkBox_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="5dp"
            android:buttonTint="@color/colorPrimary"
            android:gravity="center_vertical"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/sCheckBox_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="5dp"
            android:buttonTint="@color/colorPrimary"
            android:gravity="center_vertical"
            android:visibility="visible" />

        <TextView
            android:id="@+id/text_item"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/sCheckBox_item"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/sCheckBox_item"
            android:text="@string/item"
            android:textColor="#000"
            tools:ignore="RelativeOverlap" />

        <CheckBox
            android:id="@+id/addToShoppingList"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="11dp"
            android:layout_marginEnd="40dp"
            android:button="@drawable/checkbox_shoppinglist"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/deletePackingItem"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="11dp"
            android:layout_marginEnd="7dp"
            android:contentDescription="@string/app_name"
            android:gravity="center_vertical"
            android:src="@drawable/ic_baseline_delete_24_red"
            android:visibility="gone" />

        <!--        <ImageView-->
        <!--            android:id="@+id/deleteShoppingItem"-->
        <!--            android:layout_width="24dp"-->
        <!--            android:layout_height="24dp"-->
        <!--            android:layout_marginVertical="11dp"-->
        <!--            android:layout_alignParentEnd="true"-->
        <!--            android:layout_marginEnd="7dp"-->
        <!--            android:src="@drawable/ic_baseline_delete_24_red"-->
        <!--            android:gravity="center_vertical"-->
        <!--            android:contentDescription="@string/app_name" />-->

        <TableRow
            android:id="@+id/hr"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="49.5dp"
            android:background="#1B000000" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>